# OpenRouter API (get key from https://openrouter.ai/)
OPENROUTER_API_KEY=sk-or-xxx

# OpenRouter model (defaults to Claude 3.5 Sonnet)
OPENROUTER_DEFAULT_MODEL=anthropic/claude-3.5-sonnet

# PaddleOCR API (get token from https://ai.baidu.com/)
# Leave empty to use PyMuPDF fallback only
PADDLEOCR_TOKEN=

# ArXiv settings
ARXIV_DELAY_SECONDS=3.0
ARXIV_MAX_RESULTS=50

# Scheduler settings
SCHEDULER_ENABLED=false
SCHEDULER_TIME=08:00
SCHEDULER_CATEGORIES=cs.AI,cs.LG,cs.CL

# Paths
PAPERS_DIR=./papers
DATA_DIR=./data

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=false
